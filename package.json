{
  "name": "@kcbb/root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "hello" :"pnpm run --filter \"@kcbb-internal/*\" build",
    "build:internal": "pnpm run --filter \"@kcbb-internal/*\" build",
    "build:internal:watch": "pnpm run --stream --parallel --filter \"@kcbb-internal/*\" build:watch",
    "build:lib": "pnpm run --filter \"@kcbb-libs/*\" build",
    "build:lib:watch": "pnpm run --stream --parallel --filter \"@kcbb-libs/*\" build:watch",
    "build:init": "pnpm run --filter \"@kcbb/init...\" build",
    "build:init:watch": "pnpm run --stream --parallel --filter \"@kcbb/init...\" build:watch",
    "build:hack": "pnpm run --filter \"@kcbb/hack...\" build",
    "build:hack:watch": "pnpm run --stream --parallel --filter \"@kcbb/hack...\" build:watch",
    "build:deploy": "pnpm run --filter \"@kcbb/deploy...\" build",
    "build:deploy:watch": "pnpm run --stream --parallel --filter \"@kcbb/deploy...\" build:watch",
    "build:purchase-server": "pnpm run --filter \"@kcbb/purchase-server...\" build",
    "build:purchase-server:watch": "pnpm run --stream --parallel --filter \"@kcbb/purchase-server...\" build:watch",
    "build": "pnpm run --recursive build",
    "build:watch": "pnpm run --stream --parallel --recursive build:watch",
    "test:lib": "pnpm run --filter \"@kcbb-libs/*\" test",
    "test:lib:watch": "pnpm run --stream --parallel --filter \"@kcbb-libs/*\" test:watch",
    "test:init": "pnpm run --filter \"@kcbb/init...\" test",
    "test:init:watch": "pnpm run --stream --parallel --filter \"@kcbb/init...\" test:watch",
    "test:hack": "pnpm run --filter \"@kcbb/hack...\" test",
    "test:hack:watch": "pnpm run --stream --parallel --filter \"@kcbb/hack...\" test:watch",
    "test:deploy": "pnpm run --filter \"@kcbb/deploy...\" test",
    "test:deploy:watch": "pnpm run --stream --parallel --filter \"@kcbb/deploy...\" test:watch",
    "test:purchase-server": "pnpm run --filter \"@kcbb/purchase-server...\" test",
    "test:purchase-server:watch": "pnpm run --stream --parallel --filter \"@kcbb/purchase-server...\" test:watch",
    "test": "pnpm run --recursive test",
    "test:watch": "pnpm run --stream --parallel --recursive test:watch",
    "test:coverage": "pnpm run --recursive test:coverage",
    "test:coverage:watch": "pnpm run --stream --parallel --recursive test:coverage:watch",
    "push": "node scripts/push.js",
    "upgrade": "pnpm upgrade --recursive --latest"
  }
}
